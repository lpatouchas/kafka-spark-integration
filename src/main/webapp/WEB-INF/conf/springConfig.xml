	<bean id="restSubmitter" class="com.spark.submitter.rest.SparkRestJobSubmmiter">
		<property name="createSubmissionRequest" ref="job1"></property>
	</bean>
	
	<bean id="messageConsumer" class="com.kafka.consumer.KafkaConsumerImpl">
		<property name="topic" value="partitioned-topic"></property>
		<property name="consumerConfig" ref="consumerConfig"></property>
		<property name="sparkJobSubmitter" ref="restSubmitter"></property>
	</bean>
	
	
